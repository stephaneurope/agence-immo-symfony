{% extends "admin/ad/base.html.twig" %}

{% block title %}Modifier la réservation numéro {{booking.id}}{% endblock %}

{% block body %}
<div class="container-fluid"></div>
<h1 class="my-5">Modifier la réservation numéro {{booking.id}}</h1>

{{ form_start(form)}}
<div class="row">

    <div class="col">
{{ form_row(form.startDate)}}
{{ form_row(form.endDate)}}
{{ form_row(form.comment)}}
    </div>
    <div class="col">
{{ form_row(form.booker)}}
{{ form_row(form.ad)}}

<button type="submit" class="btn btn-success">
<i class="fas fa-check"></i>
Enregistrer les modifications

</button>
    </div>
    {{form_end(form)}}
</div>


    
{% endblock %}